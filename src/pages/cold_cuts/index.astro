---
import { Links } from '../../components/Link/Links'
import LayoutPage from '../../layouts/LayoutPage.astro'
import Topstripe from '../../components/Topstripe.astro'
import { PulsatingHeader } from '../../components/PulsatingHeader/PulsatingHeader'
---

<LayoutPage
  title="CrossSnow Cold Cuts EP"
  description="This three track EP is the final sneak peek into the upcoming album CrossSnow Original Movie Soundtrack by lebchen."
>
  <Fragment slot="over-header">
    <Topstripe />
    <PulsatingHeader client:idle time={5000}
      >CrossSnow Cold Cuts EP</PulsatingHeader
    >
  </Fragment>
  <span class="title" slot="subtitle"
    >Coming december the 6th on all platforms!</span
  >
  <Links
    amazon=""
    anghami=""
    bandcamp="https://lebchen.bandcamp.com/album/crosssnow-cold-cuts-ep"
    apple=""
    boomplay=""
    deezer=""
    spotify=""
    tidal=""
    youtube=""
  />
</LayoutPage>

<style>
  body {
    --headercard-background: rgba(235, 178, 59, 0.14);
    --color: #ebb23b;
    --shadowColor: #ecb13d99;
  }
</style>
